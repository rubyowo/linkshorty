{
	"compilerOptions": {
		"target": "es2024",
		"module": "Node16",
		"noImplicitAny": true,
		"moduleResolution": "node16",
		"sourceMap": true,
		"incremental": true,
		"strict": true,
		"skipLibCheck": true,

		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"]
}
